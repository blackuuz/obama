<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="main_tv_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">280px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">40px</item>
        <item name="android:textColor">@color/text_black1</item>
    </style>

    <style name="main_iv_item">
        <item name="android:layout_width">70px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">180px</item>
    </style>

    <style name="quick_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">34px</item>
    </style>

    <style name="quick_title_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:layout_marginLeft">160px</item>
        <item name="android:layout_marginRight">160px</item>
        <item name="android:layout_marginTop">40px</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_statistics">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">@color/text_black3</item>
    </style>

    <style name="edit_statistice">
        <item name="android:layout_width">180px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:background">@mipmap/edit_bg</item>
    </style>

    <style name="text_statistice_time">
        <item name="android:layout_width">220px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@mipmap/edit_bg</item>
    </style>

    <style name="text_statistics_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">@color/text_blue1</item>
    </style>

    <style name="text_statistics_open">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">30px</item>
        <item name="android:layout_marginLeft">40px</item>
        <item name="android:textColor">@color/text_blue1</item>
    </style>

    <style name="text_statistics_open2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24px</item>
        <item name="android:layout_marginLeft">40px</item>
        <item name="android:textColor">@color/text_black3</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_load_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_statistics_del_l">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">54px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/text_black3</item>
    </style>

    <style name="text_statistics_del_r">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">54px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/text_black4</item>
    </style>

    <style name="edit_open">
        <item name="android:paddingLeft">20px</item>
        <item name="android:layout_width">400px</item>
        <item name="android:layout_marginLeft">40px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">30px</item>
        <item name="android:background">@mipmap/edit_bg</item>
    </style>

    <style name="exit_text1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">@color/text_black2</item>
    </style>

    <style name="exit_text2">
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">@color/text_black3</item>
    </style>

    <style name="main_f">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120px</item>
        <item name="android:background">@drawable/select_main</item>
    </style>

    <style name="BottomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item></style>
    <!-- ActionSheet进出动画 -->
    <style name="BottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit</item></style>

</resources>
