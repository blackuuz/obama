<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500px"
    android:layout_height="wrap_content"
    android:background="@mipmap/pop_up_01"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="60px">

    <ImageView
        android:id="@+id/pop_iv_click"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_gravity="right"
        android:layout_margin="20px"
        android:src="@mipmap/pop_up_03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速消费金额选择"
        android:textColor="#3444f5"
        android:textSize="35px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginRight="60px"
        android:layout_marginLeft="60px"
        android:background="#8d8d8d" />

    <ListView
        android:id="@+id/lv_quickdelm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2px"
        android:divider="@color/main_bg"
        android:dividerHeight="2px"></ListView>
</LinearLayout>


