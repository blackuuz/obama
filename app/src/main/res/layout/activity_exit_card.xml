<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_exit_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/exit_text2"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="会员信息" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <TextView
                style="@style/exit_text1"
                android:text="会员卡号:" />

            <TextView
                android:id="@+id/tv_exit_cardNum"
                style="@style/exit_text2"
                android:text="5607" />

            <TextView
                android:id="@+id/tv_exit_cardis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="(未停用)"
                android:textColor="#ff0000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/exit_text1"
                android:text="会员姓名:" />

            <TextView
                android:id="@+id/tv_exit_name"
                style="@style/exit_text2"
                android:text="name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/exit_text1"
                android:text="会员卡类型:" />

            <TextView
                android:id="@+id/tv_exit_type"
                style="@style/exit_text2"
                android:text="type" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/exit_text1"
                android:text="会员有效期:" />

            <TextView
                android:id="@+id/tv_exit_time"
                style="@style/exit_text2"
                android:text="2016" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exit_str0"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="当前储值:" />

            <TextView
                android:id="@+id/tv_exit_str1"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="折扣倍率" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exit_str2"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="当前积分:" />

            <TextView
                android:id="@+id/tv_exit_str3"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="积分倍率" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/main_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                style="@style/text_statistics_open"
                android:layout_marginLeft="0dp"
                android:text="退款金额 :"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_exit_money"
                style="@style/edit_open"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textColor="#ff0000"
                android:textSize="18sp" />

            <TextView
                style="@style/text_statistics_open"
                android:text="元"
                android:textColor="@color/text_black3"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_open_0"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@mipmap/xj"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:text="现金支付"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_pay_open_1"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@mipmap/wx"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:text="微信支付"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_open_2"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/zfb"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:text="支付宝支付"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_pay_open_3"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/yl"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:text="银联支付"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/bottom_s" />
</LinearLayout>
