<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_open_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/text_statistics_open"
                android:text="会员卡号 :"
                android:textSize="36px" />

            <TextView
                android:id="@+id/tv_change_cardNum"
                style="@style/edit_open"
                android:inputType="number"
                android:textColor="@color/text_black0"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                style="@style/text_statistics_open"
                android:text="会员姓名 :"
                android:textSize="36px" />

            <EditText
                android:id="@+id/et_change_name"
                style="@style/edit_open"
                android:background="@mipmap/sign"
                android:textColor="@color/text_black3"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="性别 :"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <ImageView
                android:id="@+id/open_info_iv1"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:src="@mipmap/sel_box" />

            <TextView
                android:id="@+id/open_info_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4px"
                android:gravity="center_vertical"
                android:text="男"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <ImageView
                android:id="@+id/open_info_iv2"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="90px"
                android:src="@mipmap/sel_box" />

            <TextView
                android:id="@+id/open_info_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4px"
                android:gravity="center_vertical"
                android:text="女"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <ImageView
                android:id="@+id/open_info_iv3"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="90px"
                android:src="@mipmap/sel_box" />

            <TextView
                android:id="@+id/open_info_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4px"
                android:gravity="center_vertical"
                android:text="保密"
                android:textColor="@color/text_black3"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="联系方式 :"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <EditText
                android:id="@+id/et_change_phone"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:background="@mipmap/sign"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="20px"
                android:textColor="@color/text_black3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="生日 :"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <TextView
                android:id="@+id/et_change_time"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:background="@mipmap/sign"
                android:gravity="center_vertical"
                android:paddingLeft="20px"
                android:textColor="@color/text_black3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="身份证号 :"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <EditText
                android:id="@+id/et_change_idCard"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:background="@mipmap/sign"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingLeft="20px"
                android:textColor="@color/text_black3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="车牌号 :"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <EditText
                android:id="@+id/et_change_carNum"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:background="@mipmap/sign"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingLeft="20px"
                android:textColor="@color/text_black3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:text="地址 :"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <EditText
                android:id="@+id/et_change_address"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:background="@mipmap/sign"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingLeft="20px"
                android:textColor="@color/text_black3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <TextView
                style="@style/text_statistics_open"
                android:text="登记店面 :"
                android:textColor="@color/text_black3"
                android:textSize="36px" />

            <TextView
                android:id="@+id/et_change_shop"
                android:layout_width="400px"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:background="@mipmap/edit_bg"
                android:gravity="center_vertical"
                android:inputType="text"
                android:paddingLeft="20px"
                android:textColor="@color/text_black3" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/bottom_s" />
</LinearLayout>