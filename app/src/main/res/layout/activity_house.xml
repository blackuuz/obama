<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_house"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="32px"
        android:paddingRight="32px">

        <Button
            android:id="@+id/btn_unuse"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:background="@drawable/house_select"
            android:onClick="unuse"
            android:text="空闲"
            android:textColor="@color/white"
            android:textSize="36px" />

        <Button
            android:id="@+id/btn_use"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:background="@drawable/house_normal"
            android:onClick="use"
            android:text="使用中"
            android:textColor="@color/main_title_bg"
            android:textSize="36px" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_house"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <include layout="@layout/bottom_s" />
</LinearLayout>
