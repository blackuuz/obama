<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_xj"
                android:layout_width="260px"
                android:layout_height="100px"
                android:background="@drawable/select_pay_0"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="现金支付"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_pay_dsf"
                android:layout_width="260px"
                android:layout_height="100px"
                android:background="@drawable/select_pay_dsf"
                android:gravity="center_vertical|right"
                android:paddingRight="30px"
                android:text="第三方支付"
                android:textSize="30px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_w_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_wx"
                android:layout_width="260px"
                android:layout_height="100px"
                android:background="@drawable/select_pay_w"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="微信支付"
                android:textSize="30px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_pay_zfb"
                android:layout_width="260px"
                android:layout_height="100px"

                android:background="@drawable/select_pay_z"
                android:gravity="center_vertical|right"
                android:paddingRight="30px"
                android:text="支付宝支付"
                android:textSize="30px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>