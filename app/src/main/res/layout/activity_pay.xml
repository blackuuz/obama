<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <LinearLayout
        android:id="@+id/ll_pay_0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pay_open_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:text="800"
            android:textColor="#000"
            android:textSize="20sp"
            android:visibility="visible"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="26dp"
                    android:text="实际收款 :"
                    android:textColor="#2b2b2b"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/et_pay"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/edit_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="true"
                    android:text="000000"
                    android:textColor="#ff0000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="元"
                    android:textColor="#2b2b2b"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_sjsk"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/select_button_r"
                    android:text="点击修改"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="visible" />
            </LinearLayout>


            <include layout="@layout/pay_select2" />

        <include layout="@layout/pay_hint" />
    </LinearLayout>

    <include layout="@layout/bottom_s" />


</LinearLayout>
