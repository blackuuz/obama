<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_open_card_statistics_detials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="卡号" />

            <TextView
                android:id="@+id/tv_statistics_detilas_num"
                style="@style/text_statistics_del_r" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_statistics_detilas_name"
                style="@style/text_statistics_del_r" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="退款金额" />

            <TextView
                android:id="@+id/tv_statistics_detilas0"
                style="@style/text_statistics_del_r" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="退款方式" />

            <TextView
                android:id="@+id/tv_statistics_detilas_way"
                style="@style/text_statistics_del_r" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="退款时间" />

            <TextView
                android:id="@+id/tv_statistics_detilas1"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="手持序列号" />

            <TextView
                android:id="@+id/tv_statistics_detilas2"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_statistics_detilas3"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />

            <TextView
                android:id="@+id/textView3"
                style="@style/text_statistics_del_l"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
                android:text="退款单号" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="退卡店面" />

            <TextView
                android:id="@+id/tv_statistics_detilas4"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="操作员" />

            <TextView
                android:id="@+id/tv_statistics_detilas5"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/bottom_s" />
</LinearLayout>
