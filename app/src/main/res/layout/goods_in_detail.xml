<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pop_up_01"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="10px">

        <ImageView
            android:id="@+id/alert_back_0"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="20px"
            android:src="@mipmap/pop_up_03" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="商品入库修改"
            android:textColor="@color/text_blue"
            android:textSize="46px" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="      商品名称: "
            android:textColor="@color/text_black1"
            android:textSize="46px" />

        <TextView
            android:id="@+id/goods_in_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="草莓"
            android:textColor="@color/text_black1"
            android:textSize="40px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="      进货价格: "
            android:textColor="@color/text_black1"
            android:textSize="46px" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="50px"
            android:layout_weight="1"
            android:background="@mipmap/edit_bg"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:text="100"
            android:textColor="@color/text_black3"
            android:textSize="40px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="      数量: "
            android:textColor="@color/text_black1"
            android:textSize="46px" />

        <ImageView
            android:id="@+id/iv_click_del"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="0"
            android:src="@drawable/select_shop_del" />

        <EditText
            android:id="@+id/alert_num"
            android:layout_width="0dp"
            android:layout_height="50px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:background="@mipmap/edit_bg"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:text="20"
            android:textSize="42px" />

        <ImageView
            android:id="@+id/iv_click_add"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginRight="20px"
            android:layout_weight="0"
            android:src="@drawable/select_shop_add" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="      合计金额: "
            android:textColor="@color/text_black1"
            android:textSize="46px" />

        <TextView
            android:id="@+id/total_money"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="50px"
            android:layout_weight="1"
            android:background="@mipmap/edit_bg"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/text_black1"
            android:textSize="40px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="      商品状态: "
            android:textColor="@color/text_black1"
            android:textSize="46px" />

        <Spinner
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:id="@+id/goods_spinner"
            android:layout_marginLeft="70px"
            android:layout_marginRight="50px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/text_black1"
            android:textSize="46px" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_sure"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="60px"
        android:background="@mipmap/select_1_0"
        android:text="确定"
        android:textColor="#ffffff" />

</LinearLayout>