<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_open_card_statistics_detials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/title_obama" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="卡号" />

                <TextView
                    android:id="@+id/tv_statistics_detilas0"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    android:id="@+id/tv_statistics_detilas1"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/text_statistics_del_l"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="54px"
                    android:text="姓名" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28px"
                android:background="@color/main_bg" />

            <LinearLayout
                android:id="@+id/detials_title"
                android:layout_width="match_parent"
                android:layout_height="92px"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title0"
                    style="@style/text_statistics_title"
                    android:text="项目"
                    android:textColor="@color/text_black0" />

                <TextView
                    android:id="@+id/tv_title1"
                    style="@style/text_statistics_title"
                    android:textColor="@color/text_black0" />

                <TextView
                    android:id="@+id/tv_title2"
                    style="@style/text_statistics_title"
                    android:textColor="@color/text_black0" />

                <TextView
                    android:id="@+id/tv_title3"
                    style="@style/text_statistics_title"
                    android:text="数量"
                    android:textColor="@color/text_black0" />
            </LinearLayout>

            <com.ksk.obama.utils.DetialsListView
                android:id="@+id/detials_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.ksk.obama.utils.DetialsListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28px"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="时间" />

                <TextView
                    android:id="@+id/tv_statistics_detilas2"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="手持序列号" />

                <TextView
                    android:id="@+id/tv_statistics_detilas4"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px">

                <TextView
                    android:id="@+id/tv_statistics_detilas3"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/text_statistics_del_l"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="54px"
                    android:text="收款单号" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28px"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="计次店面" />

                <TextView
                    android:id="@+id/tv_statistics_detilas5"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="操作员" />

                <TextView
                    android:id="@+id/tv_statistics_detilas6"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>



    <include layout="@layout/bottom_s" />
</LinearLayout>
