<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main_title_bg">

        <TextView
            android:id="@+id/tv_help_order"
            android:layout_width="50dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_main_shop_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="beyond"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_pop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/setting" />

        <TextView
            android:id="@+id/tv_main_vip_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_help_order"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_toLeftOf="@+id/iv_pop"
            android:layout_toStartOf="@+id/iv_pop"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="黄家驹"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_text_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日常业务"
            android:textColor="@color/text_blue"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@mipmap/cut_off_line_v" />

        <TextView
            android:id="@+id/tv_main_text_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="会员管理"
            android:textColor="@color/text_black0"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@mipmap/cut_off_line_v" />

        <TextView
            android:id="@+id/tv_main_text_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查询统计"
            android:textColor="@color/text_black0"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@mipmap/cut_off_line_h"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_line_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_weight="1"
            android:background="@color/line_blue_h"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_main_line_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_weight="1"
            android:background="@color/line_blue_h"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_main_line_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_weight="1"
            android:background="@color/line_blue_h"
            android:visibility="invisible" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"></android.support.v4.view.ViewPager>

</LinearLayout>
