<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_open_card_statistics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_statistics_title0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_statistics_title1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_statistics_title2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_red"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingRight="29dp"
            android:paddingLeft="29dp">

            <TextView
                style="@style/text_statistics"
                android:text="时间 :" />

            <TextView
                android:id="@+id/tv_statistics_time_start"
                style="@style/text_statistice_time" />

            <TextView
                style="@style/text_statistics"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="-  -  -" />

            <TextView
                android:id="@+id/tv_statistics_time_end"
                style="@style/text_statistice_time" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_statistics_commit"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/select_pw_yes"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/main_bg" />

        <include layout="@layout/statistics_bottom" />

    </LinearLayout>

    <include layout="@layout/bottom_s" />
</LinearLayout>
