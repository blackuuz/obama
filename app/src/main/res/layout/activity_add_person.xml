<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_add_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/title_obama" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_shop"
            android:layout_width="200px"
            android:layout_height="80px"
            android:background="@mipmap/add_btn"
            android:drawableRight="@mipmap/add_0"
            android:paddingRight="10dp"
            android:text="店铺名称"
            android:textColor="#323232"
            android:textSize="30px" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="40px"
            android:layout_weight="1"
            android:background="@mipmap/add_et"
            android:gravity="center_vertical"
            android:hint="请输入工号姓名" />

        <Button
            android:id="@+id/btn_serach"
            android:layout_width="60px"
            android:layout_height="26dp"
            android:background="@mipmap/add_serach" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="50px"
            android:text="工号"
            android:textColor="#323232"
            android:textSize="34px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名"
            android:textColor="#323232"
            android:textSize="34px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="50px"
            android:text="店名"
            android:textColor="#323232"
            android:textSize="34px" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/main_bg" />

    <ListView
        android:id="@+id/add_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="4px"></ListView>

    <include layout="@layout/bottom_s" />
</LinearLayout>
