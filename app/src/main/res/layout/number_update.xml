<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pop_up_01"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/alert_back_0"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_gravity="right"
        android:layout_margin="20px"
        android:src="@mipmap/pop_up_03" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="数量修改"
        android:textColor="@color/text_blue"
        android:textSize="40px" />

    <LinearLayout
        android:layout_marginTop="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_click_del"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@drawable/select_shop_del" />

        <EditText
            android:id="@+id/alert_num"
            android:layout_width="240px"
            android:layout_height="80px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@mipmap/edit_l_1"
            android:gravity="center"
            android:inputType="numberDecimal" />

        <ImageView
            android:id="@+id/iv_click_add"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@drawable/select_shop_add" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="60px"
        android:background="@mipmap/select_1_0"
        android:text="确定"
        android:textColor="#ffffff" />

</LinearLayout>
