<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_buy_count_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/buy_shop_0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@color/main_bg" />

        <EditText
            android:id="@+id/et_change_integral_name"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"
            android:background="@mipmap/read_card_info_et"
            android:gravity="center"
            android:hint="请输入商品名/编码"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textColor="@color/text_black0"
            android:textSize="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分:"
                android:textColor="@color/text_black3"
                android:textSize="30px" />

            <EditText
                android:id="@+id/et_change_integral_0"
                android:layout_width="180px"
                android:layout_height="60px"
                android:layout_marginLeft="20px"
                android:background="@mipmap/read_card_info_et"
                android:gravity="center"
                android:textColor="@color/text_black4"
                android:textSize="30px" />

            <TextView
                android:layout_width="20px"
                android:layout_height="2px"
                android:layout_gravity="center_vertical"
                android:layout_margin="8px"
                android:background="#000" />

            <EditText
                android:id="@+id/et_change_integral_1"
                android:layout_width="180px"
                android:layout_height="60px"
                android:background="@mipmap/read_card_info_et"
                android:gravity="center"
                android:textColor="@color/text_black4"
                android:textSize="30px" />

            <Button
                android:id="@+id/et_change_integral_query"
                android:layout_width="0dp"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:layout_weight="1"
                android:background="@drawable/select_loss"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="30px" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@color/main_bg" />

        <include layout="@layout/buy_shop_2" />

        <include layout="@layout/buy_shop_3" />


    </LinearLayout>

    <include layout="@layout/bottom_s" />

</LinearLayout>
