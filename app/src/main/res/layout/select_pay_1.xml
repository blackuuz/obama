<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_lkl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_0"
                android:layout_width="260px"
                android:layout_height="100px"
                android:background="@drawable/select_pay_0"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="现金支付"
                android:textSize="30px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_pay_1"
                android:layout_width="260px"
                android:layout_height="100px"
                android:background="@drawable/select_pay_2"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="扫码支付"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_3"
                android:layout_width="260px"
                android:layout_height="100px"
                android:layout_marginTop="30px"
                android:background="@drawable/select_pay_3"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="银联支付"
                android:textSize="30px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="260px"
                android:layout_height="100px"
                android:layout_marginTop="30px"
                android:background="@drawable/select_pay_4"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="会员卡支付"
                android:textSize="26px"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_0_0"
                android:layout_width="260px"
                android:layout_height="100px"
                android:background="@drawable/select_pay_0"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="现金支付"
                android:textSize="30px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_pay_1_1"
                android:layout_width="260px"
                android:layout_height="100px"
                android:background="@drawable/select_pay_w"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="微信支付"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pay_2"
                android:layout_width="260px"
                android:layout_height="100px"
                android:layout_marginTop="30px"
                android:background="@drawable/select_pay_z"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="支付宝"
                android:textSize="30px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="260px"
                android:layout_height="100px"
                android:layout_marginTop="30px"
                android:background="@drawable/select_pay_4"
                android:gravity="center_vertical|right"
                android:paddingRight="40px"
                android:text="会员卡支付"
                android:textSize="26px"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>