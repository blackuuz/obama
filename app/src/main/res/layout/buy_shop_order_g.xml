<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400px"
    android:background="@mipmap/pop_up_01"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:text="挂单"
        android:textColor="@android:color/holo_red_light"
        android:textSize="40px" />

    <EditText
        android:id="@+id/et_shop_order_g"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:background="@mipmap/sign"
        android:gravity="center"
        android:hint="请输入挂单信息"
        android:textColor="@color/text_black3"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_shop_order_g"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:background="@drawable/select_pw_yes"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="40px" />


</LinearLayout>