<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="会员卡号:" />

                    <TextView
                        android:id="@+id/tv_rech_cardNum"
                        style="@style/exit_text2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/exit_text1"
                        android:text="会员卡类型" />

                    <TextView
                        android:id="@+id/tv_rech_type"
                        style="@style/exit_text2" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="会员姓名:" />

                    <TextView
                        android:id="@+id/tv_rech_name"
                        style="@style/exit_text2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="会员有效期" />

                    <TextView
                        android:id="@+id/tv_rech_time"
                        style="@style/exit_text2" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="当前储值:" />

                    <TextView
                        android:id="@+id/tv_rech_str0"
                        style="@style/exit_text2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="折扣倍率" />

                    <TextView
                        android:id="@+id/tv_rech_str1"
                        style="@style/exit_text2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="当前积分:" />

                    <TextView
                        android:id="@+id/tv_rech_str2"
                        style="@style/exit_text2" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="充值积分倍率" />

                    <TextView
                        android:id="@+id/tv_rech_str3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18px"
                        android:textColor="@color/text_black3"
                        android:textSize="26px" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:layout_marginTop="1px"
                android:background="@color/main_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:layout_marginTop="10px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="充值金额 :"
                    android:textColor="@color/text_blue"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/et_rech_paya"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:background="@mipmap/edit_text_1"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20px"
                    android:textColor="@color/text_red"
                    android:textSize="32px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_rech"
                    android:layout_width="170px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="46px"
                    android:background="@drawable/select_button_r"
                    android:text="快速充值"
                    android:textColor="@color/white"
                    android:textSize="30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:layout_marginTop="10px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="    优惠券 :"
                    android:textColor="@color/text_blue"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_rech_coupon"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:background="@mipmap/edit_text_1"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20px"
                    android:textColor="@color/text_red"
                    android:textSize="32px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_rech_coupon"
                    android:layout_width="170px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="46px"
                    android:background="@drawable/select_button_r"
                    android:text="选择优惠券"
                    android:textColor="@color/white"
                    android:textSize="30px" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="赠送金额 :"
                    android:textColor="@color/text_blue"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/et_rech_pay_give"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:background="@mipmap/edit_text_1"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20px"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/text_black3"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_modify_je"
                    android:layout_width="170px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="46px"
                    android:background="@drawable/select_button_r"
                    android:text="点击修改"
                    android:textColor="@color/white"
                    android:textSize="30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="赠送积分 :"
                    android:textColor="@color/text_blue"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/et_rech_integral"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:background="@mipmap/edit_text_1"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20px"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/text_black3"
                    android:textSize="32px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text="分"
                    android:textColor="@color/text_black3"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_modify_jf"
                    android:layout_width="170px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="46px"
                    android:background="@drawable/select_button_r"
                    android:text="点击修改"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="合计金额 :"
                    android:textColor="@color/text_blue"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_rech_money"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:background="@mipmap/edit_text_1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20px"
                    android:textColor="@color/text_black3"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="30px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="实收金额 :"
                    android:textColor="@color/text_blue"
                    android:textSize="30px" />

                <EditText
                    android:id="@+id/tv_rech_pay"
                    android:layout_width="150px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:background="@mipmap/edit_text_1"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20px"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/text_red"
                    android:textSize="30px" />
                <!--android:cursorVisible="false"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="30px" />

                <Button
                    android:id="@+id/btn_modify_ss"
                    android:layout_width="170px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="46px"
                    android:background="@drawable/select_button_r"
                    android:text="点击修改"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="@color/main_bg">

            </TextView>


            <include layout="@layout/pay_select_dsf1" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_s" />

</LinearLayout>
