<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="会员卡号:" />

                    <TextView
                        android:id="@+id/tv_rech_cardNum"
                        style="@style/exit_text2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="会员卡类型" />

                    <TextView
                        android:id="@+id/tv_rech_type"
                        style="@style/exit_text2" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="会员姓名:" />

                    <TextView
                        android:id="@+id/tv_rech_name"
                        style="@style/exit_text2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="会员有效期" />

                    <TextView
                        android:id="@+id/tv_rech_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textSize="10sp"
                        android:textColor="@color/text_black3"
                         />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="当前储值:" />

                    <TextView
                        android:id="@+id/tv_rech_str0"
                        style="@style/exit_text2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="折扣倍率" />

                    <TextView
                        android:id="@+id/tv_rech_str1"
                        style="@style/exit_text2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="当前积分:" />

                    <TextView
                        android:id="@+id/tv_rech_str2"
                        style="@style/exit_text2" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/exit_text1"
                        android:text="充值积分倍率" />

                    <TextView
                        android:id="@+id/tv_rech_str3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:textSize="13sp"
                        android:textColor="@color/text_black3"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/main_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="充值金额 :"
                    android:textColor="@color/text_blue"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_rech_paya"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/edit_text_1"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_red"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_rech"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/select_button_r"
                    android:text="快速充值"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="赠送金额 :"
                    android:textColor="@color/text_blue"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_rech_pay_give"
                    android:focusable="false"
                    android:selectAllOnFocus="true"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/edit_text_1"
                    android:clickable="false"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_black3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_modify_je"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/select_button_r"
                    android:text="点击修改"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="赠送积分 :"
                    android:textColor="@color/text_blue"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_rech_integral"
                    android:focusable="false"
                    android:selectAllOnFocus="true"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/edit_text_1"
                    android:clickable="false"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_black3"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="分"
                    android:textColor="@color/text_black3"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_modify_jf"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/select_button_r"
                    android:text="点击修改"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="合计金额 :"
                    android:textColor="@color/text_blue"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_rech_money"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/edit_text_1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_black3"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="实收金额 :"
                    android:textColor="@color/text_blue"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/tv_rech_pay"
                    android:focusable="false"
                    android:selectAllOnFocus="true"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/edit_text_1"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:clickable="false"
                    android:textColor="@color/text_red"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="元"
                    android:textColor="@color/text_black3"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_modify_ss"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="23dp"
                    android:background="@drawable/select_button_r"
                    android:text="点击修改"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/main_bg">

            </TextView>


            <include layout="@layout/pay_select2" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_s" />

</LinearLayout>
