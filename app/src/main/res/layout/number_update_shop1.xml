<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pop_up_01"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">

        <ImageView
            android:id="@+id/alert_back_0"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="20px"
            android:src="@mipmap/pop_up_03" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="商品购物修改"
            android:textColor="@color/text_blue"
            android:textSize="40px" />
    </RelativeLayout>
    l

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="单价"
            android:textColor="@color/text_blue"
            android:textSize="30px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="折扣/会员价"
            android:textColor="@color/text_red"
            android:textSize="30px" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/alert_num_d"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_weight="1"

            android:background="@mipmap/edit_l_1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="7"
            android:selectAllOnFocus="true" />

        <TextView
            android:id="@+id/vip_money_discount"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_weight="1"
            android:background="@mipmap/edit_l_1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="7"
            android:textColor="@color/text_red"
            android:selectAllOnFocus="true" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_horizontal"
        android:text="数量"
        android:textColor="@color/text_blue"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_click_del"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@drawable/select_shop_del" />

        <EditText
            android:id="@+id/alert_num"
            android:layout_width="240px"
            android:layout_height="80px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@mipmap/edit_l_1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true" />

        <ImageView
            android:id="@+id/iv_click_add"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@drawable/select_shop_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="总价"
            android:textColor="@color/text_blue"
            android:textSize="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="折后总价"
            android:textColor="@color/text_red"
            android:textSize="30px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/alert_num_z"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_weight="1"
            android:background="@mipmap/edit_l_1"
            android:focusable="false"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true" />

        <EditText
            android:id="@+id/alert_num_zh"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_weight="1"
            android:background="@mipmap/edit_l_1"
            android:focusable="true"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_red" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="60px"
        android:background="@mipmap/select_1_0"
        android:text="确定"
        android:textColor="#ffffff" />

</LinearLayout>