<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_open_card_statistics_detials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="充值金额" />

            <TextView
                android:id="@+id/tv_open_card_money"
                style="@style/text_statistics_del_r"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="卡类型" />

            <TextView
                android:id="@+id/tv_open_card_type"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="卡号" />

            <TextView
                android:id="@+id/tv_open_card_num"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_open_card_name"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/main_bg" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="充值时间" />

            <TextView
                android:id="@+id/tv_open_card_time"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="支付方式" />

            <TextView
                android:id="@+id/tv_open_mode"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="实收金额" />

            <TextView
                android:id="@+id/tv_open_sh"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="收款单号" />

            <TextView
                android:id="@+id/tv_open_dj"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/main_bg" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tv_open_start_money"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />

            <TextView
                style="@style/text_statistics_del_l"
                android:text="原金额"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="26dp"
                android:id="@+id/textView" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="充后金额" />

            <TextView
                android:id="@+id/tv_open_end_money"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black4" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="当前积分" />

            <TextView
                android:id="@+id/tv_open_jf"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/main_bg" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="充值店面" />

            <TextView
                android:id="@+id/tv_open_shop_name"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_bg" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                style="@style/text_statistics_del_l"
                android:text="操作员" />

            <TextView
                android:id="@+id/tv_open_user"
                style="@style/text_statistics_del_r"
                android:textColor="@color/text_black0" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/bottom_s" />
</LinearLayout>