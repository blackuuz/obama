<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pop_up_01"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/alert_back_0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:src="@mipmap/pop_up_03" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="商品购物修改"
            android:textColor="@color/text_blue"
            android:textSize="25sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="单价"
        android:textColor="@color/text_blue"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/alert_num_d"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/edit_l_1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="7"
            android:selectAllOnFocus="true"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="数量"
        android:textColor="@color/text_blue"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_click_del"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/select_shop_del" />

        <EditText
            android:id="@+id/alert_num"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/edit_l_1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_click_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/select_shop_add" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="总价"
        android:textColor="@color/text_blue"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_click_deld_z"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/select_shop_del"
            android:visibility="gone" />

        <EditText
            android:id="@+id/alert_num_z"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/edit_l_1"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_click_add_z"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/select_shop_add"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/select_1_0"
        android:text="确定"
        android:textSize="22sp"
        android:textColor="#ffffff" />

</LinearLayout>