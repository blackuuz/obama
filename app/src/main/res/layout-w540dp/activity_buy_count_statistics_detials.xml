<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_open_card_statistics_detials"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="消费金额" />

                <TextView
                    android:id="@+id/tv_statistics_detilas0"
                    style="@style/text_statistics_del_r" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/main_bg" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="卡号" />

                <TextView
                    android:id="@+id/tv_statistics_detilas1"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_statistics_detilas2"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="姓名"
                    android:layout_alignParentTop="true"
                    android:id="@+id/textView2" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/main_bg" />

            <LinearLayout
                android:id="@+id/detials_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title0"
                    style="@style/text_statistics_title"
                    android:text="商品名"
                    android:textColor="@color/text_black0" />

                <TextView
                    android:id="@+id/tv_title1"
                    style="@style/text_statistics_title"
                    android:text="单价"
                    android:textColor="@color/text_black0" />

                <TextView
                    android:id="@+id/tv_title2"
                    style="@style/text_statistics_title"
                    android:text="数量"
                    android:textColor="@color/text_black0" />

                <TextView
                    android:id="@+id/tv_title3"
                    style="@style/text_statistics_title"
                    android:text="小计"
                    android:textColor="@color/text_black0" />
            </LinearLayout>

            <com.ksk.obama.utils.DetialsListView
                android:id="@+id/detials_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.ksk.obama.utils.DetialsListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="购次时间" />

                <TextView
                    android:id="@+id/tv_statistics_detilas3"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="支付方式" />

                <TextView
                    android:id="@+id/tv_statistics_detilas4"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="手持序列号" />

                <TextView
                    android:id="@+id/tv_statistics_detilas5"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_statistics_detilas6"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="收款单号"
                    android:layout_alignParentTop="true"
                    android:id="@+id/textView3" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_statistics_detilas7"
                    style="@style/text_statistics_del_r"
                    android:textColor="#337ed9" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/text_statistics_del_l"
                    android:layout_alignParentTop="true"
                    android:text="获得积分" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="剩余积分" />

                <TextView
                    android:id="@+id/tv_statistics_detilas8"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black4" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="剩余储值" />

                <TextView
                    android:id="@+id/tv_statistics_detilas9"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black4" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="购次店面" />

                <TextView
                    android:id="@+id/tv_statistics_detilas10"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/text_statistics_del_l"
                    android:text="操作员" />

                <TextView
                    android:id="@+id/tv_statistics_detilas11"
                    style="@style/text_statistics_del_r"
                    android:textColor="@color/text_black0" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_s" />
</LinearLayout>
