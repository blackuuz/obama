<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="旧密码:"
            android:textColor="@color/text_black3"
            android:textSize="20sp" />

        <TextView
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:id="@+id/change_pw_0"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/edit_text_1"
            android:textColor="@color/text_black3"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="新密码:"
            android:textColor="@color/text_black3"
            android:textSize="20sp" />

        <EditText
            android:inputType="textPassword"
            android:maxLength="6"
            android:id="@+id/change_pw_1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/edit_text_1"
            android:hint="请输入新密码"
            android:paddingLeft="10dp"
            android:textColor="@color/text_black3"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="确认密码:"
            android:textColor="@color/text_black3"
            android:textSize="20sp" />

        <EditText
            android:inputType="textPassword"
            android:maxLength="6"
            android:id="@+id/change_pw_2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/edit_text_1"
            android:hint="请再次输入新密码"
            android:paddingLeft="10dp"
            android:textColor="@color/text_black3"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/change_hint"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/line_blue_h"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/bottom_s" />
</LinearLayout>
