<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_click_add_year"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/select_shop_add" />

        <EditText
            android:id="@+id/et_time_year"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/edit_bg"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_black3"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_click_del_year"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/select_shop_del" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="--" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_click_add_mouth"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/select_shop_add" />

        <EditText
            android:id="@+id/et_time_mouth"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/edit_bg"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_black3"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_click_del_mouth"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/select_shop_del" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="--" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_click_add_day"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/select_shop_add" />

        <EditText
            android:id="@+id/et_time_day"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/edit_bg"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:selectAllOnFocus="true"
            android:textColor="@color/text_black3"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_click_del_day"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/select_shop_del" />
    </LinearLayout>
</LinearLayout>