<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pop_up_01"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/alert_back_qr"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:src="@mipmap/pop_up_03" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="确认支付："
        android:textColor="@color/text_blue"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/qr_pay_money"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/edit_l_1"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/text_red"
        />


    <Button
        android:id="@+id/btn_sure_qr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/select_1_0"
        android:text="确定"
        android:textSize="22sp"
        android:textColor="#ffffff" />

</LinearLayout>
