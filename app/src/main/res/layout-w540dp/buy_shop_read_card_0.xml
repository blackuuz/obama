<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@mipmap/pop_up_01"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="请刷卡"
        android:textColor="@android:color/holo_red_light"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/et_buy_shop_read_card"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/sign"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/text_black3"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_buy_shop_read_card"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/select_pw_yes"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_read_code"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/select_code" />

    <Button
        android:id="@+id/btn_read_novip"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/select_pw_yes"
        android:text="改为散客"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>