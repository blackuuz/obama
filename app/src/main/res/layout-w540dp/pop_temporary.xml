<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="@mipmap/pop_up_01"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:src="@mipmap/pop_up_03"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_red"
        android:textSize="20sp"
        android:text="当前账号无修改权限"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_red"
        android:textSize="20sp"
        android:text="请输入权限账号授权"/>
    
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工号:"
                android:textSize="25sp"
                android:textColor="@color/text_black4"/>
            <EditText
                android:id="@+id/et_num"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textColor="@color/text_black4"
                android:inputType="number"
                android:drawableBottom="@color/line_blue_h"/>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textSize="25sp"
            android:textColor="@color/text_black4"/>
        <EditText
            android:id="@+id/et_pwd"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="@color/text_black4"
            android:inputType="textPassword"
            android:drawableBottom="@color/line_blue_h"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_yes"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:background="@drawable/select_pw_yes"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:background="@drawable/select_pw_no"
            android:text="取消"
            android:textColor="@color/text_black4"
            android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>