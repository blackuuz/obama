<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_open_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="必填信息"
                android:textColor="#333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_black4"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_statistics_open"
                    android:text="会员卡号 :" />

                <EditText
                    android:id="@+id/et_open_card_num"
                    style="@style/edit_open"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textColor="@color/text_black0" />

                <Button
                    android:id="@+id/btn_read_code"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/select_code" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_statistics_open"
                    android:text="会员姓名 :" />

                <EditText
                    android:id="@+id/et_open_name"
                    style="@style/edit_open"
                    android:textColor="@color/text_black3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_statistics_open"
                    android:text="会员类型 :" />

                <TextView
                    android:id="@+id/tv_open_type"
                    style="@style/edit_open"
                    android:layout_width="170dp"
                    android:text="选择卡类型"
                    android:textColor="@color/text_black3" />

                <ImageView
                    android:id="@+id/iv_open_type"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/open_xl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_statistics_open"
                    android:text="应收金额 :" />

                <TextView
                    android:id="@+id/tv_open_ys"
                    style="@style/edit_open"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:textColor="#ff0000" />

                <TextView
                    style="@style/text_statistics_open"
                    android:text="元"
                    android:textColor="@color/text_black3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_statistics_open"
                    android:text="实收金额 :" />

                <EditText
                    android:id="@+id/et_open_ss"
                    style="@style/edit_open"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="#ff0000" />

                <TextView
                    style="@style/text_statistics_open"
                    android:text="元"
                    android:textColor="@color/text_black3" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_statistics_open2"
                        android:text="初始储值 :" />

                    <TextView
                        android:id="@+id/tv_open0"
                        style="@style/text_statistics_open2"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/edit_bg"
                        android:gravity="center"
                        android:textColor="#ff0000" />

                    <TextView
                        style="@style/text_statistics_open2"
                        android:layout_marginLeft="5dp"
                        android:text="元" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_statistics_open2"
                        android:text="初始积分 :" />

                    <TextView
                        android:id="@+id/tv_open1"
                        style="@style/text_statistics_open2"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/edit_bg"
                        android:gravity="center"
                        android:textColor="#ff0000" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_statistics_open2"
                        android:text="折扣倍率 :" />

                    <TextView
                        android:id="@+id/tv_open2"
                        style="@style/text_statistics_open2"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/edit_bg"
                        android:gravity="center"
                        android:textColor="#ff0000" />

                    <TextView
                        style="@style/text_statistics_open2"
                        android:layout_marginLeft="5dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_statistics_open2"
                        android:text="积分倍率 :" />

                    <TextView
                        android:id="@+id/tv_open3"
                        style="@style/text_statistics_open2"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/edit_bg"
                        android:gravity="center"
                        android:textColor="#ff0000" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_statistics_open"
                    android:text="登记店面 :"
                    android:textColor="@color/text_black3" />

                <TextView
                    android:id="@+id/tv_open4"
                    style="@style/edit_open"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_black3" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/bottom_s" />

</LinearLayout>
