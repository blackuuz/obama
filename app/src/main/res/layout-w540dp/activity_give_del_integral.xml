<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_give_del_integral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_obama" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赠送/扣除:"
                android:textColor="@color/text_black4"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_g_d_integral"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@mipmap/edit_bg"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:textColor="@color/text_black4"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textColor="@color/text_black4"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <Button
                android:id="@+id/btn_give"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/select_loss"
                android:text="赠送积分"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/select_loss"
                android:text="扣除积分"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/main_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="会员信息"
            android:textColor="@color/text_black4"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exit_str0"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="left"
                android:text="会员卡号:"
                android:textColor="@color/text_black4" />

            <TextView
                android:id="@+id/tv_exit_str1"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:text="会员姓名:"
                android:textColor="@color/text_black4" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exit_str2"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="left"
                android:text="当前储值:"
                android:textColor="@color/text_black4" />

            <TextView
                android:id="@+id/tv_exit_str3"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:text="折扣倍率:"
                android:textColor="@color/text_black4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exit_str4"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="left"
                android:text="当前积分:"
                android:textColor="@color/text_black4" />

            <TextView
                android:id="@+id/tv_exit_str5"
                style="@style/exit_text1"
                android:layout_width="0dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="2"
                android:text="积分倍率:"
                android:textColor="@color/text_black4" />

        </LinearLayout>

        <include layout="@layout/pay_hint" />

    </LinearLayout>

    <include layout="@layout/bottom_s" />
</LinearLayout>
